    "express": "^4.18.3",
    "express-session": "^1.18.0",
    "method-override": "^3.0.0",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "slugify": "^1.6.6",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.8",
    "@types/method-override": "^3.0.0",
    "@types/node": "^20.11.19",
    "@types/pg": "^8.11.11",
