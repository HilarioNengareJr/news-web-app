<%- include('layouts/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Admin Dashboard</h2>
    <div class="d-flex gap-2">
        <a href="/admin/article/new" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Create New Article
        </a>
        <a href="/register" class="btn btn-outline-primary">
            <i class="bi bi-person-plus"></i> Add Admin
        </a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Image</th>
                <th>Title</th>
                <th>Tags</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% articles.forEach(article => { %>
                <tr>
                    <td>
                        <img src="<%= article.image_url %>" alt="<%= article.title %>" style="width: 100px; height: 60px; object-fit: cover;">
                    </td>
                    <td><%= article.title %></td>
                    <td>
                        <% article.tags.forEach(tag => { %>
                            <span class="badge bg-secondary tag-badge"><%= tag %></span>
                        <% }) %>
                    </td>
                    <td>
                        <a href="/admin/article/<%= article.id %>/edit" class="btn btn-sm btn-warning me-2">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <form action="/admin/article/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include('layouts/footer') %>